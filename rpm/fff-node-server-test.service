[Unit]
Description=FFF node server test
Wants=network-online.target
After=fff.service network.service nfs.service rsyslog.service

[Service]
Type=simple
WorkingDirectory=/opt/node/test
ExecStart=/usr/bin/node --expose-gc /opt/node/test/app.js 80 /var/log/node/test 0
Restart=on-failure
RestartSec=10
#RemainAfterExit=no

[Install]
WantedBy=multi-user.target
