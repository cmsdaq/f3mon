[Unit]
Description=FFF node server prod
Wants=network-online.target
After=fff.service network.service nfs.service rsyslog.service

[Service]
Type=simple
WorkingDirectory=/opt/node/prod
ExecStart=/usr/bin/node --expose-gc /opt/node/prod/app.js 80 es-cdaq-runtime /var/log/node/prod 0
Restart=on-failure
RestartSec=10
#RemainAfterExit=no

[Install]
WantedBy=multi-user.target
